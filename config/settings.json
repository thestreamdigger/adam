{
  "mpd": {
    "host": "localhost",
    "port": 6600
  },
  "gpio": {
    "button": 20,
    "display": {
      "clk": 15,
      "dio": 14
    },
    "leds": {
      "repeat": 12,
      "random": 13,
      "single": 18,
      "consume": 19,
      "pwm": {
        "frequency": 2000,
        "pins": [12, 13, 18, 19]
      }
    },
    "encoder": {
      "enabled": false,
      "pin_a": 23,
      "pin_b": 24,
      "poll_interval": 100,
      "speed_factor": 2,
      "volume_step": 3
    }
  },
  "timing": {
    "command_cooldown": 0.5,
    "long_press_time": 2,
    "update_interval": 0.5,
    "volume_display_duration": 3
  },
  "display": {
    "brightness": 0,
    "brightness_levels": {
      "led": [5, 25, 100],
      "display": [0, 2, 7]
    },
    "mode": "elapsed",
    "pause_mode": {
      "blink_interval": 1
    },
    "play_mode": {
      "track_number": {
        "show_number": true,
        "display_time": 2
      }
    },
    "stop_mode": {
      "stop_symbol_time": 2,
      "track_total_time": 2,
      "playlist_time": 2
    }
  },
  "paths": {
    "roulette": "/home/pi/adam/scripts/roulette.sh",
    "shutdown": "/home/pi/adam/scripts/shutdown.sh"
  },
  "copy": {
    "led": 21,
    "min_usb_size_gb": 4,
    "destination_skip_folders": ["NAS", "Music", "Metal"],
    "path_structure": {
      "min_depth": 4,
      "artist_level": 2,
      "album_level": 3,
      "music_root": "/var/lib/mpd/music",
      "preserve_levels": [2, 3, 4]
    }
  },
  "updates": {
    "trigger": {
      "file": ".update_trigger",
      "check_interval": 0.5,
      "debounce_time": 0.1
    }
  },
  "logging": {
    "enable": true,
    "level": "INFO",
    "format": "[{level}] {message}"
  }
}
