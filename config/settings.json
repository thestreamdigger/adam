{
  "mpd": {
    "host": "localhost",
    "port": 6600
  },
  "gpio": {
    "button": 16,
    "display": {
      "clk": 15,
      "dio": 14
    },
    "leds": {
      "repeat": 17,
      "random": 27,
      "single": 22,
      "consume": 10,
      "copy": 12
    }
  },
  "timing": {
    "command_cooldown": 1,
    "long_press_time": 2,
    "update_interval": 1,
    "volume_display_duration": 3
  },
  "display": {
    "brightness": 0,
    "mode": "elapsed",
    "pause_mode": {
      "blink_interval": 1
    },
    "play_mode": {
      "track_number_time": 2
    },
    "stop_mode": {
      "stop_symbol_time": 2,
      "track_total_time": 2,
      "total_time_display": 2
    }
  },
  "paths": {
    "roulette": "/home/pi/adam/scripts/roulette.sh",
    "shutdown": "/home/pi/adam/scripts/shutdown.sh"
  },
  "copy": {
    "destination_skip_folders": [
      "NAS",
      "Music",
      "Metal"
    ],
    "path_structure": {
      "min_depth": 4,
      "artist_level": 2,
      "album_level": 3,
      "music_root": "/var/lib/mpd/music",
      "preserve_levels": [2, 3, 4]
    },
    "min_usb_size_gb": 4
  }
}
